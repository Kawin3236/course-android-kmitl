<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="kmitl.kawin58070006.horyuni.MainFragment"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnBrowse_Click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image to upload"
        android:background="@color/colorAccent"
        android:onClick="btnBrowse_Click"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/imageView"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:id="@+id/imageView2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtImageName"
        android:hint="Image name"/>
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload image"
        android:background="@color/colorAccent"
        android:onClick="btnUpload_Click"/>

    <Button
        android:id="@+id/btnShowListImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:onClick="btnShowListImage_Click"
        android:text="Show imagelist" />

</LinearLayout>
